{
  "name": "ghost-browser",
  "version": "2.0.3",
  "description": "About A TypeScript stealth layer for Puppeteer and Playwright that makes your automation behave like a real browser â€” human-like, undetectable, and smooth.",
  "type": "commonjs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types.d.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "prepare": "npm run build"
  },
  "keywords": [
    "playwright",
    "puppeteer",
    "cloudflare-bypass",
    "undetectable",
    "real-browser",
    "ghost-cursor"
  ],
  "dependencies": {
    "chrome-launcher": "^1.2.1",
    "ghost-cursor": "^1.4.1",
    "puppeteer-extra": "^3.3.6",
    "rebrowser-puppeteer-core": "^24.8.1",
    "tree-kill": "^1.2.2",
    "xvfb": "^0.4.0"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^22.0.0"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zidan-org/ghost-browser"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "author": "zidan-org",
  "license": "ISC"
}